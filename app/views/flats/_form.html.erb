<%= simple_form_for flat do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :pic_url %>
  <%= f.label :price_per_night, "Price per Night" %>
  <%= f.number_field :price_per_night %>
  <%= f.label :number_of_guests, "Number of Guests" %>
  <%= f.number_field :number_of_guests %>
  <%= f.submit %>
<% end %>
